
@{
    ViewBag.Title = "Kategoriler";
}
@using KutuphaneProgrami.Data.Model;
@model List<Kategori>


<h2>KATEGORİLER</h2>

<table id="example" class="display" style="width:100%">



    <thead>
        <tr>
            <th>Ad</th>
            <th>Kitap Adeti</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var ktg in Model)
        {
            <tr>
                <td>@ktg.Ad</td>
                <td>@ktg.Kitaplar.Count()</td>
                <td>
                    <button value="@ktg.Id"
                            class="guncelle"
                            style="background-color: #009DF1; color: white">
                        Güncelle
                    </button>
                </td>
                <td>
                    <button value="@ktg.Id"
                            class="sil"
                            style="background-color:red; color: white">
                        sil
                    </button>
                </td>
            </tr>
        }


    </tbody>

    <tfoot>
        <tr>
            <th>Ad</th>
            <th>Kitap Adeti</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </tfoot>
</table>