@{
    ViewBag.Title = "Verilen Kitaplar";
}
@using KutuphaneProgrami.Data.Model;
@model List<OduncKitap>

<h2 style="display:inline-block;">VERİLEN KİTAPLAR</h2>

<a href="@Url.Action("KitapVer","OduncKitap")"
   style="background-color: #009DF1; color: white; border: 2px solid #555; text-decoration: none; float: right; margin:5px;"
   class="ktpVerBtn">Kitap Ver
</a>

<table id="example" class="display" style="width:100%">
    <thead>
        <tr>
            <th>Kitap Alan Üye</th>
            <th>Aldığı Tarih</th>
            <th>Getireceği Tarih</th>
            <th>Getirildi Olarak İşaretle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var oduncKtp in Model)
        {
              <tr>
                  <td>@oduncKtp.Uye.Ad</td>
                  <td>@oduncKtp.AlisTarihi.ToString("dddd, dd MMMM yyyy")</td>
                  <td>@oduncKtp.GetirecegiTarih.ToString("dddd, dd MMMM yyyy")</td>
                  <td>
                      <button value="@oduncKtp.Id"
                              class="odnc_sil"
                              style="background-color:red; color: white">
                          Getirildi Olarak İşaretle
                      </button>
                  </td>
              </tr> 
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Kitap Alan Üye</th>
            <th>Aldığı Tarih</th>
            <th>Getireceği Tarih</th>
            <th>Getirildi Olarak İşaretle</th>
        </tr>
    </tfoot>
</table>
