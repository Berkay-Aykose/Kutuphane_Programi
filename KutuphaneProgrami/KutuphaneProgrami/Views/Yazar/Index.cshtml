@{
    ViewBag.Title = "Yazarlar";
}
@using KutuphaneProgrami.Data.Model;
@model List<Yazar>

<h2>YAZARLAR</h2>

<table id="example" class="display" style="width:100%">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Kitap Adeti</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var yzr in Model)
        {
            <tr>
                <td>@yzr.Ad</td>
                <td>@yzr.Kitaplar.Count()</td>
                <td>
                    <button value="@yzr.Id"
                            class="yzr_guncelle"
                            style="background-color: #009DF1; color: white">
                        Güncelle
                    </button>
                </td>
                <td>
                    <button value="@yzr.Id"
                            class="yzr_sil"
                            style="background-color:red; color: white">
                        sil
                    </button>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Ad</th>
            <th>Kitap Adeti</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </tfoot>
</table>