@{
    ViewBag.Title = "Kitap Ekle";
}
<h2 style="text-align:center">KİTAP EKLE</h2>
<form action="#">
    <!--  Kategori Ekle< -->
    <div class="form-group">
        <h4>Kategori Ekle</h4>
        <div>
            <select class="form_control" id="kategoriler">
                @foreach (var kategori in ViewBag.Kategoriler)
                {
                    <option data-id="@kategori.Id">@kategori.Ad</option>
                }
            </select>
        </div>
        <div>
            <input type="button" id="kategoriEkle" value="Ekle">
        </div>
        <div id="eklenenKategoriler" style="margin-right: 2px; margin-bottom: 2px">
            <label>Kategoriler</label>
        </div>
    </div>
    <!--  Yazar Ekle -->
    <div class="form-group">
        <h4>Yazar Ekle</h4>
        <div>
            <select class="form_control" id="yazar">
                @foreach (var yazar in ViewBag.Yazarlar)
                {
                    <option data-id="@yazar.Id">@yazar.Ad</option>
                }
            </select>
        </div>
    </div>
    <!--  Kitap Adı -->
    <div class="form-group">
        <h4>Kitap Adı</h4>
        <div>
            <input id="kitapAd" type="text" placeholder="Kitap Adı Giriniz">
        </div>
    </div>
    <!--  Adet -->
    <div class="form-group">
        <h4>Adet</h4>
        <div>
            <input id="kitapAdet" type="text" placeholder="Adet Giriniz">
        </div>
    </div>
    <!--  Sıra No -->
    <div class="form-group">
        <h4>Sıra No</h4>
        <div>
            <input id="siraNo" type="text" placeholder="Sıra No Giriniz">
        </div>
    </div>
    <!--  kaydet -->
    <div class="form-group">
        <div class="controls">
            <input type="button" id="kitapKaydet" value="Kaydet">
        </div>
    </div>
</form>